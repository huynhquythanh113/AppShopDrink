<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaikhoanFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <ImageView
               android:id="@+id/imagedaidien"
               android:layout_marginLeft="10dp"
               android:src="@drawable/ic_baseline_account_box_24"
               android:layout_width="100dp"
               android:layout_height="100dp"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/namedaidien"
                    android:textSize="20dp"
                    android:text="name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/emaildaidien"
                    android:text="email"
                    android:textColor="#C3BFBF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sdtdaidien"
                    android:textColor="#C3BFBF"
                    android:text="0909835475"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/thaydoithongtin"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="#DAD3D3"
                android:text="Thay đổi thông tin tài khoản"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/donhang"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="#DAD3D3"
                android:text="Đơn hàng của bạn"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/lichsudonhang"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="#DAD3D3"
                android:text="Lịch sử đơn hàng"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/dangxuat"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="#DAD3D3"
                android:text="Sign out"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>